@{
    ViewData["Title"] = "Полные кавалеры ордена Славы";
}

<div class="container">
    <h1 class="text-center">Полные кавалеры ордена Славы</h1>
    <div class="row">
        @foreach (var hero in Model.Heroes)
        {
            <div class="col-md-4 mb-4">
                <img src="@hero.PhotoUrl" class="img-fluid rounded shadow-sm" alt="Фото @hero.FullName" />
                <p class="text-center">@hero.FullName</p>
            </div>
        }
    </div>
</div>
